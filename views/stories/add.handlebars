<h1>Add Story</h1>
<div class="row">
  <form action="/stories" method="POST" class="col s12">
    <div class="row">
      <div class="input-field">
          <input id="first_name" type="text" name="title" class="validate">
          <label for="first_name">Title</label>
        </div>
    </div>

    <div class="row">
      <div class="input-field">
        <select name="status">
          <option value="public" selected>Public</option>
          <option value="private">Private</option>
          <option value="unpublished">Unpublished</option>
        </select>
        <label for="status">Status</label>
      </div>
      

    <div class="row">
      <p>
        <label>
          <input type="checkbox" name="allowComments" checked="checked" id="indeterminate-checkbox" />
          <span>Allow Comments</span>
        </label>
      </p>
    </div>

    
 <div class="row">
      <div class="input-field">
        <h5>Tell Us Your Story:</h5>
        <textarea name="body"></textarea>
      </div>
    </div>

    <input type="submit" value="Save" class="btn">
  </form>
</div>